    <display-name>FilterUpdateInfo</display-name>
    <filter-name>EditFilter</filter-name>
    <filter-class>com.Filter.ApplicationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EditFilter</filter-name>
    <url-pattern>/EditServ</url-pattern>
  </filter-mapping>
