    <servlet-class>com.controller.FriendsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FriendsUserInfo</servlet-name>
    <url-pattern>/FriendsServlet</url-pattern>
  </servlet-mapping>
  <filter>
    <display-name>FilterUpdateInfo</display-name>
    <filter-name>UpdateFilter</filter-name>
    <filter-class>com.Filter.ApplicationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>UpdateFilter</filter-name>
    <url-pattern>/FriendsServlet</url-pattern>
  </filter-mapping>
  <servlet>
    <display-name>LogOutUser</display-name>
    <servlet-name>Logout</servlet-name>
    <servlet-class>com.controller.LogOutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/LogOutServ</url-pattern>
  </servlet-mapping>
  <filter>
    <display-name>FilterUpdateInfo</display-name>
    <filter-name>LogOutFilter</filter-name>
    <filter-class>com.Filter.ApplicationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LogOutFilter</filter-name>
    <url-pattern>/LogOutServ</url-pattern>
  </filter-mapping>
  <servlet>
    <display-name>EditServletFinally</display-name>
    <servlet-name>EditServletFinals</servlet-name>
    <servlet-class>com.controller.EditServletFinal</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditServletFinals</servlet-name>
    <url-pattern>/EditServletFinalPath</url-pattern>
  </servlet-mapping>
  <filter>
    <display-name>FilterServletFinally</display-name>
    <filter-name>EditInfoFilter</filter-name>
    <filter-class>com.Filter.ApplicationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EditInfoFilter</filter-name>
    <url-pattern>/EditServletFinalPath</url-pattern>
  </filter-mapping>
  
  
  
   <servlet>
    <display-name>UploadingImg</display-name>
