    <display-name>FilterInfo</display-name>
    <filter-name>LoginFilter</filter-name>
    <filter-class>com.Filter.ApplicationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/Login</url-pattern>
  </filter-mapping>
  <servlet>
